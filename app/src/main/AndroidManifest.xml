<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.manjano.bus">

    <application
        android:name=".ManjanoApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Manjano.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY_HERE"/>

        <!-- Main Launcher Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- New Compose Profile Setup Activity -->
        <activity
            android:name=".compose.ProfileSetupActivity"
            android:exported="false"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.Manjano.NoActionBar" />

        <!-- Keep legacy activity for gradual migration -->
        <activity
            android:name=".legacy.ProfileSetupActivity"
            android:exported="false"
            android:screenOrientation="unspecified" />

        </application>

</manifest>